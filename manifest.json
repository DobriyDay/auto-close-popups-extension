{
  "manifest_version": 3,
  "name": "Auto Click Element",
  "version": "1.0.0",
  "description": "Автоматически нажимает на указанные элементы на сайтах (куки-баннеры, реклама и т.д.)",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}